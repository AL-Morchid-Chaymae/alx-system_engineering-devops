function get_subdomain_info {
    local subdomain=$1
    local domain=$2
    local record_type=$(dig $subdomain.$domain +short | awk '{print toupper($1)}')
    local destination=$(dig $subdomain.$domain +short)
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

if [ -z "$subdomain" ]; then
    get_subdomain_info www.hitone.tech
    get_subdomain_info lb-01.hitone.tech
    get_subdomain_info web-01.hitone.tech
    get_subdomain_info web-02.hitone.tech
else
    get_subdomain_info $subdomain.hitone.tech
fi

